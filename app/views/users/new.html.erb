<div class="error">
 <% @user.errors.full_messages.each do |message| %>
  <%= message %><br>
 <% end %>
</div>
<div class="account">
   <h1>新しいアカウントを作成</h1>
    <%= form_tag("/users", method: :post) do %>
        <input type="text" name="name" placeholder="ユーザー名" value"<%= @user.name %>">
        <input type="text" name="email" placeholder="メールアドレス" value"<%= @user.email %>">
        <input type="password" name="password" placeholder="パスワード" value"<%= @user.password %>">
        <input type="password" name="password_confirmation" placeholder="パスワード確認" value"<%= @varification %>">
        <input type="submit" value="新規登録" class="sign_up_btn">
    <% end %>
</div>


