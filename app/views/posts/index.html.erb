<div class="posts_index" >
  <div class="posts_index_title">
    <h1>登録済みルーム一覧</h1>
  </div>
  <table>
    <div class="index-top">
      <tr>
        <th class="image_th">ルーム画像</th>
        <th class="name_th">ルーム名</th>
        <th class="introduction_th">ルーム紹介</th>
        <th class="price_th">料金</th>
        <th class="created_th">作成日</th>
      </tr>
    </div>
    <% @posts.each do |post| %>
    <div class="index-bottom">
      <tr　class="post_tr">
        <th class="image_th"><img src="<%= "/post_images/#{post.room_image}" %>"></th>
        <th class="name_th"><%= link_to(post.room_name,"/posts/#{post.id}") %></th>
        <th class="introduction_th"><%= post.room_introduction %></th>
        <th class="price_th">¥<%= post.price %></th>
        <th class="created_th"><%= post.created_at.to_s(:datetime_jp)  %></th>
      </tr>
    </div>
    <% end %>
  </table>
</div>